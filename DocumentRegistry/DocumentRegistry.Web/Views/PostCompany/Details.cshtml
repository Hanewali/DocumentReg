@model DocumentRegistry.Web.Models.PostCompany.PostCompany

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Firma pocztowa</h2>
<div class="row ml-2">
    <strong class="mr-1">@Html.DisplayNameFor(x => x.Name):</strong>
    @Html.DisplayFor(x => x.Name)
</div>
<div class="row ml-2">
    <strong class="mr-1">@Html.DisplayNameFor(x => x.Code):</strong>
    @Html.DisplayFor(x => x.Code)
</div>
<div class="row ml-2">
    <strong class="mr-1">@Html.DisplayNameFor(x => x.City):</strong>
    @Html.DisplayFor(x => x.City)
</div>
<div class="row ml-2">
    <strong class="mr-1">@Html.DisplayNameFor(x => x.Street):</strong>
    @Html.DisplayFor(x => x.Street)
</div>
<div class="row ml-2">
    <strong class="mr-1">@Html.DisplayNameFor(x => x.ContractNumber):</strong>
    @Html.DisplayFor(x => x.ContractNumber)
</div>
<div class="row ml-2">
    <strong class="mr-1">@Html.DisplayNameFor(x => x.ContractDate):</strong>
    @{ var date = Model.ContractDate.ToString("dd-MM-yyyy"); } @Html.DisplayTextFor(x => date )
</div>
<div class="row ml-2">
    <strong class="mr-1">@Html.DisplayNameFor(x => x.PostOffice):</strong>
    @Html.DisplayFor(x => x.PostOffice)
</div>

<div class="row mt-4 ml-2">
    @Html.ActionLink("Wróć", "Search", "PostCompany", null, new {@class = "btn btn-secondary col-sm-1"})
    <div class="col-sm-7"></div>
    @Html.ActionLink("Edytuj", "Edit", "PostCompany", new {id = Model.Id}, new {@class = "btn btn-warning col-sm-1"})
    @Html.ActionLink("Usuń", "ConfirmDelete", "PostCompany", new {id = Model.Id}, new {@class = "btn btn-danger col-sm-1  ml-1"})
</div>