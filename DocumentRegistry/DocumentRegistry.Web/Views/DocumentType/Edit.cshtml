@model DocumentRegistry.Web.Models.DocumentType.DocumentType

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edycja typu dokumentu</h2>
@using (Html.BeginForm("Edit", "DocumentType"))
{
    @Html.HiddenFor(x => x.Id)
    <div class="form-group row pl-3">
        <div class="col-sm-3">
            <div class="row pb-1">
                @Html.LabelFor(x => x.Name, new {@class = "required"})
                @Html.TextBoxFor(x => x.Name, null, new {@class = "form-control"})
            </div>
        </div>
    </div>

    
    <div class="row mt-3 pl-3">
        @Html.ActionLink("Wróć", "Details", "DocumentType", new {id = Model.Id}, new {@class = "btn btn-secondary"})
        <div class="col-sm-6"></div>
        <div class="col-sm-2">
            <input type="submit" value="Zapisz" class="btn btn-primary">
        </div>
    </div>
}
