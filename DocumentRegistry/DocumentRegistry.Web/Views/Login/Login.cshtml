@using System.IO
@using Microsoft.AspNetCore.Hosting
@using Microsoft.Extensions.Hosting
@model DocumentRegistry.Web.Models.Home.Login

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Rejestr Dokumentów</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Login" asp-action="Login">Rejestr dokumentów</a>
        </div>
    </nav>
</header>
<div  style="display:flex;justify-content:center;align-items:center;">
    @using (Html.BeginForm("LoginPost", "Login", FormMethod.Post, new {@class = "form p-5"}))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="row pb-1">
                <h2>Zaloguj</h2>
            </div>
            <div class="row">
                @Html.LabelFor(x => x.Username)
                @Html.TextBoxFor(m => m.Username, new {@class = "form-control"})
            </div>
            <div class="row">
                @Html.LabelFor(x => x.Password)
                @Html.PasswordFor(m => m.Password, new {@class = "form-control"})
            </div>
            <div class="row pt-2">
                <div class="col-sm-7"></div>
                <div class="col-sm-2">
                    <input type="submit" value="Zaloguj" class="btn btn-primary"/>
                </div>
            </div>
        </div>
    }
</div>
</body>
</html>